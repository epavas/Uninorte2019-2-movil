<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/futura_medium"
        android:text="@string/main_title"
        android:textAlignment="center"
        android:textColor="@color/uninorteRed"
        android:textSize="34dp" />

    <EditText
        android:id="@+id/r_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="center"
        android:hint="Username"
        android:textColor="@color/uninorteRed" />


    <EditText
        android:id="@+id/r_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="center"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColor="@color/uninorteRed" />

    <EditText
        android:id="@+id/r_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="center"
        android:hint="first_name"
        android:textColor="@color/uninorteRed" />
    <EditText
        android:id="@+id/r_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="center"
        android:hint="last_name"
        android:textColor="@color/uninorteRed" />
    <EditText
        android:id="@+id/r_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="center"
        android:hint="full_name"
        android:textColor="@color/uninorteRed" />
    <EditText
        android:id="@+id/r_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="center"
        android:hint="email"
        android:textColor="@color/uninorteRed" />


    <Button
        android:id="@+id/registration_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:background="@color/uninorteRed"
        android:fontFamily="@font/futura_medium"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@mipmap/headerlogo_un" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/futura_medium"
        android:text="@string/web_site"
        android:textAlignment="center"
        android:textColor="@color/uninorteRed"
        android:textSize="20dp" />


</LinearLayout>
